<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrclrchtr.android.example.voz.Lector">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_main"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:padding="10dp"
            android:src="@mipmap/logo" />

        <EditText
            android:id="@+id/txtTextoManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="QuÃ© deseas buscar"/>
        <TextView
            android:id="@+id/txt_view_speech_to_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="" />
        <ImageButton
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickImgBtnBuscar"
            android:src="@android:drawable/ic_menu_search"/>
        <ImageButton
            android:id="@+id/btn_grabar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:elevation="0dp"
            android:onClick="onClickImgBtnHablar_"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_btn_speak_now" />
    </LinearLayout>
</FrameLayout>
